{
  "tests": [
    {
      "name": "Test OPTIONS method for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
      }
    },
    {
      "name": "Test enrollment with valid data",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Тестовый",
        "phone": "+7 (999) 123-45-67",
        "email": "nailiya.harasova@yandex.ru"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test enrollment with missing name",
      "method": "POST",
      "path": "/",
      "body": {
        "phone": "+7 (999) 123-45-67"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
